{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "jest",
    "prettier",
    "flowtype"
  ],
  "rules": {
    "react/jsx-filename-extension": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "all",
        "semi": false
      }
    ],
    "react/prop-types": 0,
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/valid-expect": "error",
    "global-require": 0
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "jest/globals": true
  }
}